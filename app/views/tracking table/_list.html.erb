 <% @tracked_stocks.each do |stock| %>
 <div class="relative bg-pink-600 md:pt-32 pb-32 pt-12">
  <div class="px-4 md:px-10 mx-auto w-full">
      <div>
          <div class="flex flex-wrap">
              <div class="w-full lg:w-6/12 xl:w-3/12 px-4">
                  <div class="relative flex flex-col min-w-0 break-words bg-white rounded mb-6 xl:mb-0 shadow-lg">
                      <div class="flex-auto p-4">
                          <div class="flex flex-wrap">
                              <div class="relative w-full pr-4 max-w-full flex-grow flex-1">
                                  <h5 class="text-gray-500 uppercase font-bold text-xs"><%= stock.ticker %></h5><span class="font-semibold text-xl text-gray-800"><%= stock.last_price %></span></div>
       
                          </div>
                          <p class="text-sm text-gray-500 mt-4"><span class="text-green-500 mr-2"><%= link_to 'remove', user_stock_path(stock), method: :delete, data: {confirm: 'are you sure?'} %></span><span class="whitespace-no-wrap"><%= stock.name %></span></p>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>
 
    
 <% end %>
